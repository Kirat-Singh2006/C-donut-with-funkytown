{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Donut",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/donut.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/mingw64/bin/gdb.exe",  // Adjust if your MinGW is elsewhere
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build donut"
    }
  ]
}
